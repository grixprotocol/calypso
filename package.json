{
  "name": "clypso",
  "version": "1.0.0",
  "description": "DeFi options trading strategy repository",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm test && pnpm run lint",
    "preversion": "pnpm run lint",
    "version": "pnpm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": ["defi", "options", "trading", "strategy"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grixprotocol/clypso.git"
  },
  "bugs": {
    "url": "https://github.com/grixprotocol/clypso/issues"
  },
  "homepage": "https://github.com/grixprotocol/clypso#readme"
}
